<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oa.desktop.news.newslabel.dao.INewsLabelDao">

    <select id="selectAllCount" resultType="int">
        select count(*) from newlabel
    </select>

    <select id="selectParentById" resultType="NewsLabel">
        select id,label_name,label_content,pid
        from newlabel where id=#{pid}
    </select>
    <resultMap id="newsLabelMap" type="NewsLabel">
        <id column="id" property="id"/>
        <association property="parent"
                     javaType="NewsLabel"
                     select="selectParentById"
                     column="pid"/>
    </resultMap>
    <select id="selectCurrentPageNewsLabels" resultMap="newsLabelMap">
        select id,label_name,label_content,pid
        from newlabel limit #{pageStartIndex},#{pageSize}
    </select>
</mapper>